---
import { Icon } from 'astro-icon/components';
import { SITE } from 'astrowind:config';
import { getHomePermalink } from '~/utils/permalinks';
import footerWordmark from '~/assets/images/hta_header_footer.png';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface Links {
  title?: string;
  links: Array<Link>;
}

export interface Props {
  links: Array<Links>;
  secondaryLinks: Array<Link>;
  socialLinks: Array<Link>;
  footNote?: string;
  theme?: string;
}

const { socialLinks = [], secondaryLinks = [], links = [], footNote = '', theme = 'light' } = Astro.props;
---

<footer class:list={[{ dark: theme === 'dark' }, 'relative mt-8 md:mt-12 pb-8 md:pb-12 not-prose']}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <div class="surface-panel border rounded-3xl px-5 sm:px-8 py-8 sm:py-10">
      <div class="grid grid-cols-12 gap-8">
        <div class="col-span-12 lg:col-span-4">
          <a class="inline-block" href={getHomePermalink()}>
            <img
              src={footerWordmark.src}
              width={footerWordmark.width}
              height={footerWordmark.height}
              alt={SITE?.name ?? 'Heartland Transpersonal Alliance'}
              class="h-12 md:h-16 w-auto max-w-[90vw] object-contain"
              loading="lazy"
              decoding="async"
            />
          </a>
          <p class="mt-5 text-sm text-muted leading-relaxed">
            Heartland Transpersonal Alliance is building safe, practical pathways for community, education, and
            integration.
          </p>
          {
            secondaryLinks.length > 0 && (
              <div class="mt-4 text-sm text-muted flex gap-1 flex-wrap">
                {secondaryLinks.map(({ text, href }, index) => (
                  <>
                    {index !== 0 ? ' Â· ' : ''}
                    <a class="hover:text-primary hover:underline transition" href={href} set:html={text} />
                  </>
                ))}
              </div>
            )
          }
        </div>

        {
          links.map(({ title, links: groupLinks }) => (
            <div class="col-span-6 md:col-span-4 lg:col-span-2">
              <div class="font-heading text-sm uppercase tracking-[0.22em] text-secondary dark:text-cyan-200 mb-3">
                {title}
              </div>
              {groupLinks && groupLinks.length > 0 && (
                <ul class="text-sm space-y-2.5">
                  {groupLinks.map(({ text, href, ariaLabel }) => (
                    <li>
                      <a class="text-muted hover:text-primary transition" href={href} aria-label={ariaLabel}>
                        <Fragment set:html={text} />
                      </a>
                    </li>
                  ))}
                </ul>
              )}
            </div>
          ))
        }

        <div class="col-span-12 lg:col-span-2 lg:flex lg:justify-end">
          {
            socialLinks?.length ? (
              <ul class="flex gap-2.5 lg:flex-col lg:items-end">
                {socialLinks.map(({ ariaLabel, href, text, icon }) => (
                  <li>
                    <a
                      class="text-muted hover:text-default hover:bg-white/70 dark:hover:bg-slate-800/70 rounded-full text-sm h-10 w-10 inline-flex items-center justify-center"
                      aria-label={ariaLabel}
                      href={href}
                    >
                      {icon && <Icon name={icon} class="w-5 h-5" />}
                      {!icon && <Fragment set:html={text} />}
                    </a>
                  </li>
                ))}
              </ul>
            ) : (
              ''
            )
          }
        </div>
      </div>

      <div class="mt-8 pt-6 border-t border-[var(--aw-border)] text-sm text-muted">
        <Fragment set:html={footNote} />
      </div>
    </div>
  </div>
</footer>
