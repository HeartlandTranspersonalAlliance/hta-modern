---
import { Icon } from 'astro-icon/components';
import { getPermalink } from '~/utils/permalinks';
import Button from '~/components/ui/Button.astro';

export interface Props {
  prevUrl?: string;
  nextUrl?: string;
  prevText?: string;
  nextText?: string;
}

const { prevUrl, nextUrl, prevText = 'Newer posts', nextText = 'Older posts' } = Astro.props;
---

{
  (prevUrl || nextUrl) && (
    <div class="mt-8 md:mt-10 flex justify-between gap-3">
      <Button variant="tertiary" class={`px-4 ${!prevUrl ? 'invisible' : ''}`} href={getPermalink(prevUrl)}>
        <Icon name="tabler:chevron-left" class="w-5 h-5" />
        <span class="ml-1.5">{prevText}</span>
      </Button>

      <Button variant="tertiary" class={`px-4 ${!nextUrl ? 'invisible' : ''}`} href={getPermalink(nextUrl)}>
        <span class="mr-1.5">{nextText}</span>
        <Icon name="tabler:chevron-right" class="w-5 h-5" />
      </Button>
    </div>
  )
}
