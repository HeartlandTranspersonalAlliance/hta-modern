---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Timeline from '~/components/ui/Timeline.astro';
import Headline from '~/components/ui/Headline.astro';
import Image from '~/components/common/Image.astro';
import type { Steps as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  items = [],
  image = await Astro.slots.render('image'),
  isReversed = false,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-6xl ${classes?.container ?? ''}`} bg={bg}>
  <div class:list={['grid gap-8 md:gap-10 items-start', { 'lg:grid-cols-[1.02fr_0.98fr]': image }]}>
    <div class:list={[{ 'lg:order-2': isReversed }]}>
      <Headline
        title={title}
        subtitle={subtitle}
        tagline={tagline}
        classes={{
          container: 'text-left rtl:text-right max-w-none',
          title: 'text-3xl md:text-4xl',
          subtitle: 'text-base md:text-lg',
          ...((classes?.headline as object) ?? {}),
        }}
      />
      <Timeline items={items} classes={classes?.items as Record<string, never>} />
    </div>

    {
      image && (
        <div class:list={['relative', { 'lg:order-1': isReversed }]}>
          {typeof image === 'string' ? (
            <Fragment set:html={image} />
          ) : (
            <Image
              class="w-full rounded-[1.5rem] border border-[var(--aw-border)] object-cover bg-gray-400 dark:bg-slate-700"
              widths={[400, 768, 1200]}
              sizes="(max-width: 1023px) 100vw, 46vw"
              width={740}
              height={900}
              layout="responsive"
              src={image?.src}
              alt={image?.alt || ''}
            />
          )}
        </div>
      )
    }
  </div>
</WidgetWrapper>
