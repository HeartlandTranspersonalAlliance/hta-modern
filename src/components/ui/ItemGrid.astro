---
import type { ItemGrid as Props } from '~/types';
import { twMerge } from 'tailwind-merge';
import Button from './Button.astro';
import { Icon } from 'astro-icon/components';

const { items = [], columns, defaultIcon = '', classes = {} } = Astro.props;

const {
  container: containerClass = '',
  panel: panelClass = '',
  title: titleClass = '',
  description: descriptionClass = '',
  icon: defaultIconClass = 'text-primary',
  action: actionClass = '',
} = classes;
---

{
  items && items.length > 0 && (
    <div
      class={twMerge(
        `grid mx-auto gap-4 md:gap-6 ${
          columns === 4
            ? 'lg:grid-cols-4 md:grid-cols-3 sm:grid-cols-2'
            : columns === 3
              ? 'lg:grid-cols-3 sm:grid-cols-2'
              : columns === 2
                ? 'sm:grid-cols-2 '
                : ''
        }`,
        containerClass
      )}
    >
      {items.map(({ title, description, icon, callToAction, classes: itemClasses = {} }) => (
        <article class="intersect-once motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade">
          <div
            class={twMerge(
              'h-full rounded-[1.4rem] p-5 md:p-6 flex flex-col max-w-none bg-white/62 dark:bg-slate-900/48 ring-1 ring-[var(--aw-border)]',
              panelClass,
              itemClasses?.panel
            )}
          >
            {(icon || defaultIcon) && (
              <div class="mb-4 inline-flex h-10 w-10 items-center justify-center rounded-full bg-primary/12 dark:bg-primary/20">
                <Icon name={icon || defaultIcon} class={twMerge('w-5 h-5', defaultIconClass, itemClasses?.icon)} />
              </div>
            )}

            {title && (
              <h3 class={twMerge('text-xl font-semibold font-heading', titleClass, itemClasses?.title)}>{title}</h3>
            )}

            {description && (
              <p
                class={twMerge(
                  `${title ? 'mt-3' : ''} text-muted leading-relaxed`,
                  descriptionClass,
                  itemClasses?.description
                )}
                set:html={description}
              />
            )}

            {callToAction && (
              <div class={twMerge(`mt-4`, actionClass, itemClasses?.actionClass)}>
                <Button variant="link" {...callToAction} />
              </div>
            )}
          </div>
        </article>
      ))}
    </div>
  )
}
