---
export interface Props {
  label?: string;
  class?: string;
}

const {
  label = 'Toggle Menu',
  class:
    className = 'flex flex-col h-11 w-11 rounded-full justify-center items-center cursor-pointer group border border-[var(--aw-border)] bg-white/75 dark:bg-slate-900/80',
} = Astro.props;
---

<button type="button" class={className} aria-label={label} data-aw-toggle-menu>
  <span class="sr-only">{label}</span>
  <slot>
    <span
      aria-hidden="true"
      class="h-0.5 w-5 my-1 rounded-full bg-default transition ease transform duration-200 opacity-85 group-[.expanded]:rotate-45 group-[.expanded]:translate-y-2.5"
    ></span>
    <span
      aria-hidden="true"
      class="h-0.5 w-5 my-1 rounded-full bg-default transition ease transform duration-200 opacity-85 group-[.expanded]:opacity-0"
    ></span>
    <span
      aria-hidden="true"
      class="h-0.5 w-5 my-1 rounded-full bg-default transition ease transform duration-200 opacity-85 group-[.expanded]:-rotate-45 group-[.expanded]:-translate-y-2.5"
    ></span>
  </slot>
</button>
