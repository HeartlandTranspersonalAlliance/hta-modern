---
import '@fontsource-variable/inter';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(13 74 156);
    --aw-color-secondary: rgb(15 118 110);
    --aw-color-accent: rgb(8 47 73);

    --aw-color-text-heading: rgb(15 23 42);
    --aw-color-text-default: rgb(30 41 59);
    --aw-color-text-muted: rgb(51 65 85 / 80%);
    --aw-color-bg-page: rgb(248 250 252);

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: rgb(191 219 254);
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(59 130 246);
    --aw-color-secondary: rgb(45 212 191);
    --aw-color-accent: rgb(56 189 248);

    --aw-color-text-heading: rgb(241 245 249);
    --aw-color-text-default: rgb(226 232 240);
    --aw-color-text-muted: rgb(148 163 184);
    --aw-color-bg-page: rgb(2 6 23);

    ::selection {
      background-color: rgb(30 64 175);
      color: rgb(248 250 252);
    }
  }
</style>
