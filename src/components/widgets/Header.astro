---
import { Icon } from 'astro-icon/components';
import Logo from '~/components/Logo.astro';
import ToggleTheme from '~/components/common/ToggleTheme.astro';
import ToggleMenu from '~/components/common/ToggleMenu.astro';
import Button from '~/components/ui/Button.astro';

import { getHomePermalink } from '~/utils/permalinks';
import { trimSlash, getAsset } from '~/utils/permalinks';
import type { CallToAction } from '~/types';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface MenuLink extends Link {
  links?: Array<MenuLink>;
}

export interface Props {
  id?: string;
  links?: Array<MenuLink>;
  actions?: Array<CallToAction>;
  isSticky?: boolean;
  isDark?: boolean;
  isFullWidth?: boolean;
  showToggleTheme?: boolean;
  showRssFeed?: boolean;
  position?: string;
}

const {
  id = 'header',
  links = [],
  actions = [],
  isSticky = false,
  isDark = false,
  isFullWidth = false,
  showToggleTheme = false,
  showRssFeed = false,
  position = 'center',
} = Astro.props;

const currentPath = `/${trimSlash(new URL(Astro.url).pathname)}`;
---

<header
  class:list={[
    { sticky: isSticky, relative: !isSticky, dark: isDark },
    'top-0 z-50 flex-none mx-auto w-full transition-[opacity] ease-out',
  ]}
  {...isSticky ? { 'data-aw-sticky-header': true } : {}}
  {...id ? { id } : {}}
>
  <div class="max-w-7xl mx-auto px-2 md:px-4 pt-3 md:pt-5">
    <div
      class:list={[
        'relative border rounded-2xl md:rounded-full px-3 md:px-5 py-2 md:py-3 surface-panel',
        {
          'md:flex md:justify-between': position !== 'center',
        },
        {
          'md:grid md:grid-cols-3 md:items-center': position === 'center',
        },
        {
          'max-w-7xl': !isFullWidth,
        },
      ]}
    >
      <div
        class:list={[
          { 'mr-auto rtl:mr-0 rtl:ml-auto': position === 'right' },
          'flex items-center justify-between gap-3',
        ]}
      >
        <a class="flex items-center" href={getHomePermalink()}>
          <Logo />
        </a>
        <div class="flex items-center md:hidden">
          <ToggleMenu
            class="flex h-11 w-11 rounded-full border border-[var(--aw-border)] bg-white/70 dark:bg-slate-900/80 justify-center items-center cursor-pointer"
          />
        </div>
      </div>

      <nav
        class="items-start md:items-center w-full md:w-auto hidden md:flex md:mx-5 overflow-y-auto md:overflow-visible md:justify-self-center"
        aria-label="Main navigation"
      >
        <ul
          class="flex flex-col md:flex-row gap-1 md:gap-0 w-full md:w-auto text-[1.02rem] md:text-[0.95rem] tracking-[0.01rem] font-medium md:justify-center"
        >
          {
            links.map(({ text, href, links }) => (
              <li class:list={[links?.length ? 'dropdown relative' : 'relative']}>
                {links?.length ? (
                  <>
                    <button
                      type="button"
                      class="px-4 py-3 md:py-2.5 rounded-xl md:rounded-full text-left md:text-center hover:bg-white/70 dark:hover:bg-slate-800/75 hover:text-primary flex items-center gap-1.5 whitespace-nowrap"
                    >
                      {text}
                      <Icon name="tabler:chevron-down" class="w-3.5 h-3.5 hidden md:inline" />
                    </button>
                    <ul class="dropdown-menu md:backdrop-blur-md rounded-xl md:absolute pl-0 md:hidden font-medium bg-[var(--aw-surface-strong)] border border-[var(--aw-border)] md:min-w-[220px] shadow-2xl mt-1">
                      {links.map(({ text: text2, href: href2 }) => (
                        <li>
                          <a
                            class:list={[
                              'first:rounded-t-xl last:rounded-b-xl py-2.5 px-4 block whitespace-nowrap hover:bg-white/60 dark:hover:bg-slate-800/70 hover:text-primary',
                              { 'text-primary font-semibold': href2 === currentPath },
                            ]}
                            href={href2}
                          >
                            {text2}
                          </a>
                        </li>
                      ))}
                    </ul>
                  </>
                ) : (
                  <a
                    class:list={[
                      'px-4 py-3 md:py-2.5 rounded-xl md:rounded-full hover:bg-white/70 dark:hover:bg-slate-800/75 hover:text-primary flex items-center whitespace-nowrap transition',
                      { 'text-primary font-semibold bg-white/75 dark:bg-slate-800/65': href === currentPath },
                    ]}
                    href={href}
                  >
                    {text}
                  </a>
                )}
              </li>
            ))
          }
        </ul>
      </nav>

      <div
        class:list={[
          { 'ml-auto rtl:ml-0 rtl:mr-auto': position === 'left' },
          'hidden md:self-center md:flex items-center md:mb-0 fixed w-full md:w-auto md:static justify-end left-0 rtl:left-auto rtl:right-0 bottom-0 p-3 md:p-0 md:justify-self-end',
        ]}
        data-aw-header-actions
      >
        <div
          class="items-center flex justify-between w-full md:w-auto rounded-2xl md:rounded-none border md:border-0 border-[var(--aw-border)] bg-[var(--aw-surface-strong)] md:bg-transparent p-2 md:p-0"
        >
          <div class="flex items-center gap-1.5">
            {
              showToggleTheme && (
                <ToggleTheme
                  class="text-muted hover:text-default hover:bg-white/75 dark:hover:bg-slate-800/70 rounded-full p-2.5 inline-flex items-center"
                  iconClass="w-5 h-5"
                />
              )
            }
            {
              showRssFeed && (
                <a
                  class="text-muted hover:text-default hover:bg-white/75 dark:hover:bg-slate-800/70 rounded-full p-2.5 inline-flex items-center"
                  aria-label="RSS Feed"
                  href={getAsset('/rss.xml')}
                >
                  <Icon name="tabler:rss" class="w-5 h-5" />
                </a>
              )
            }
          </div>
          {
            actions?.length ? (
              <span class="ml-2 rtl:ml-0 rtl:mr-2 flex gap-2">
                {actions.map((btnProps) => (
                  <Button
                    {...btnProps}
                    class="py-2.5 px-5 md:px-5 font-semibold shadow-none text-sm w-auto whitespace-nowrap"
                  />
                ))}
              </span>
            ) : (
              ''
            )
          }
        </div>
      </div>
    </div>
  </div>
</header>
