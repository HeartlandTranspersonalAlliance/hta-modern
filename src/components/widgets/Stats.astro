---
import type { Stats as Props } from '~/types';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import { Icon } from 'astro-icon/components';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  stats = [],

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-6xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />
  <div class="grid gap-4 md:gap-5 sm:grid-cols-2 lg:grid-cols-4">
    {
      stats &&
        stats.map(({ amount, title, icon }) => (
          <article class="rounded-[1.4rem] p-5 md:p-6 text-center intersect-once motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade intersect-quarter bg-white/58 dark:bg-slate-900/45 ring-1 ring-[var(--aw-border)]">
            {icon && (
              <div class="flex items-center justify-center mx-auto mb-4 text-primary">
                <Icon name={icon} class="w-8 h-8" />
              </div>
            )}
            {amount && (
              <div class="font-heading text-primary text-4xl md:text-5xl font-semibold tracking-tight">{amount}</div>
            )}
            {title && (
              <div class="mt-2 text-xs md:text-sm font-semibold uppercase tracking-[0.2em] text-muted">{title}</div>
            )}
          </article>
        ))
    }
  </div>
</WidgetWrapper>
