---
import { Icon } from 'astro-icon/components';
import Logo from '~/components/Logo.astro';
import ToggleTheme from '~/components/common/ToggleTheme.astro';
import ToggleMenu from '~/components/common/ToggleMenu.astro';
import Button from '~/components/ui/Button.astro';

import { getHomePermalink } from '~/utils/permalinks';
import { trimSlash, getAsset } from '~/utils/permalinks';
import type { CallToAction } from '~/types';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface MenuLink extends Link {
  links?: Array<MenuLink>;
}

export interface Props {
  id?: string;
  links?: Array<MenuLink>;
  actions?: Array<CallToAction>;
  isSticky?: boolean;
  isDark?: boolean;
  isFullWidth?: boolean;
  showToggleTheme?: boolean;
  showRssFeed?: boolean;
  position?: string;
}

const {
  id = 'header',
  links = [],
  actions = [],
  isSticky = false,
  isDark = false,
  isFullWidth = false,
  showToggleTheme = false,
  showRssFeed = false,
  position = 'center',
} = Astro.props;

const currentPath = `/${trimSlash(new URL(Astro.url).pathname)}`;
const navPlacementClass =
  position === 'left' ? 'md:mr-auto md:ml-6' : position === 'right' ? 'md:ml-auto md:mr-6' : 'md:mx-6';
---

<header
  class:list={[
    { sticky: isSticky, relative: !isSticky, dark: isDark },
    'top-0 z-50 flex-none mx-auto w-full transition-[opacity] ease-out',
  ]}
  {...isSticky ? { 'data-aw-sticky-header': true } : {}}
  {...id ? { id } : {}}
>
  <div class="max-w-7xl mx-auto px-2 md:px-4 pt-3 md:pt-5">
    <div
      class:list={[
        'relative border rounded-2xl md:rounded-full px-3 md:px-5 py-2.5 md:py-3 surface-panel',
        { 'max-w-7xl': !isFullWidth },
      ]}
    >
      <div class="flex items-center justify-between gap-3">
        <a class="flex items-center" href={getHomePermalink()}>
          <Logo />
        </a>

        <nav
          class:list={['hidden md:flex items-center gap-1.5 lg:gap-2', navPlacementClass]}
          aria-label="Main navigation"
        >
          {
            links.map(({ text, href, links }) => (
              <div class:list={[links?.length ? 'dropdown relative' : 'relative']}>
                {links?.length ? (
                  <>
                    <button
                      type="button"
                      class="px-3.5 py-2 rounded-full text-sm hover:bg-white/75 dark:hover:bg-slate-800/70 hover:text-primary flex items-center gap-1"
                    >
                      {text}
                      <Icon name="tabler:chevron-down" class="w-3.5 h-3.5" />
                    </button>
                    <ul class="dropdown-menu hidden absolute top-[calc(100%+0.4rem)] left-0 rounded-xl font-medium bg-[var(--aw-surface-strong)] border border-[var(--aw-border)] min-w-[210px] shadow-2xl py-1.5 z-20">
                      {links.map(({ text: text2, href: href2 }) => (
                        <li>
                          <a
                            class:list={[
                              'py-2 px-3.5 block whitespace-nowrap hover:bg-white/60 dark:hover:bg-slate-800/70 hover:text-primary',
                              { 'text-primary font-semibold': href2 === currentPath },
                            ]}
                            href={href2}
                          >
                            {text2}
                          </a>
                        </li>
                      ))}
                    </ul>
                  </>
                ) : (
                  <a
                    class:list={[
                      'px-3.5 py-2 rounded-full text-sm hover:bg-white/75 dark:hover:bg-slate-800/70 hover:text-primary transition whitespace-nowrap',
                      { 'text-primary font-semibold bg-white/75 dark:bg-slate-800/65': href === currentPath },
                    ]}
                    href={href}
                  >
                    {text}
                  </a>
                )}
              </div>
            ))
          }
        </nav>

        <div class="hidden md:flex items-center gap-1.5" data-aw-header-actions>
          {
            showToggleTheme && (
              <ToggleTheme
                class="text-muted hover:text-default hover:bg-white/75 dark:hover:bg-slate-800/70 rounded-full p-2.5 inline-flex items-center"
                iconClass="w-5 h-5"
              />
            )
          }
          {
            showRssFeed && (
              <a
                class="text-muted hover:text-default hover:bg-white/75 dark:hover:bg-slate-800/70 rounded-full p-2.5 inline-flex items-center"
                aria-label="RSS Feed"
                href={getAsset('/rss.xml')}
              >
                <Icon name="tabler:rss" class="w-5 h-5" />
              </a>
            )
          }
          {
            actions?.length ? (
              <span class="flex gap-2 pl-1">
                {actions.map((btnProps) => (
                  <Button
                    {...btnProps}
                    class="py-2.5 px-4.5 font-semibold shadow-none text-sm w-auto whitespace-nowrap"
                  />
                ))}
              </span>
            ) : (
              ''
            )
          }
        </div>

        <div class="flex items-center md:hidden">
          <ToggleMenu
            class="flex h-11 w-11 rounded-full border border-[var(--aw-border)] bg-white/75 dark:bg-slate-900/82 justify-center items-center cursor-pointer"
          />
        </div>
      </div>

      <div class="hidden md:hidden border-t border-[var(--aw-border)] mt-3 pt-3" data-aw-mobile-nav>
        <nav aria-label="Mobile navigation">
          <ul class="flex flex-col gap-1.5">
            {
              links.map(({ text, href, links }) => (
                <li>
                  {!links?.length ? (
                    <a
                      class:list={[
                        'block px-3.5 py-3 rounded-xl hover:bg-white/70 dark:hover:bg-slate-800/70 transition',
                        { 'text-primary font-semibold bg-white/70 dark:bg-slate-800/65': href === currentPath },
                      ]}
                      href={href}
                    >
                      {text}
                    </a>
                  ) : (
                    <details class="group rounded-xl bg-white/35 dark:bg-slate-900/35 border border-[var(--aw-border)]">
                      <summary class="list-none cursor-pointer px-3.5 py-3 flex items-center justify-between">
                        <span>{text}</span>
                        <Icon name="tabler:chevron-down" class="w-4 h-4 transition group-open:rotate-180" />
                      </summary>
                      <ul class="pb-2 px-2">
                        {links.map(({ text: text2, href: href2 }) => (
                          <li>
                            <a
                              class:list={[
                                'block px-3 py-2 rounded-lg hover:bg-white/60 dark:hover:bg-slate-800/60',
                                { 'text-primary font-semibold': href2 === currentPath },
                              ]}
                              href={href2}
                            >
                              {text2}
                            </a>
                          </li>
                        ))}
                      </ul>
                    </details>
                  )}
                </li>
              ))
            }
          </ul>
        </nav>

        <div class="mt-3 pt-3 border-t border-[var(--aw-border)] flex items-center justify-between gap-3">
          <div class="flex items-center gap-1.5">
            {
              showToggleTheme && (
                <ToggleTheme
                  class="text-muted hover:text-default hover:bg-white/75 dark:hover:bg-slate-800/70 rounded-full p-2.5 inline-flex items-center"
                  iconClass="w-5 h-5"
                />
              )
            }
            {
              showRssFeed && (
                <a
                  class="text-muted hover:text-default hover:bg-white/75 dark:hover:bg-slate-800/70 rounded-full p-2.5 inline-flex items-center"
                  aria-label="RSS Feed"
                  href={getAsset('/rss.xml')}
                >
                  <Icon name="tabler:rss" class="w-5 h-5" />
                </a>
              )
            }
          </div>
          {
            actions?.length ? (
              <span class="flex flex-wrap gap-2 justify-end">
                {actions.map((btnProps) => (
                  <Button {...btnProps} class="py-2.5 px-4 text-sm shadow-none" />
                ))}
              </span>
            ) : (
              ''
            )
          }
        </div>
      </div>
    </div>
  </div>
</header>
