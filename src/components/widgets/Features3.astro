---
import Headline from '~/components/ui/Headline.astro';
import ItemGrid from '~/components/ui/ItemGrid.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Image from '~/components/common/Image.astro';
import type { Features as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  image,
  items = [],
  columns,
  defaultIcon,
  isBeforeContent,
  isAfterContent,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper
  id={id}
  isDark={isDark}
  containerClass={`${isBeforeContent ? 'md:pb-8 lg:pb-10' : ''} ${isAfterContent ? 'pt-0 md:pt-0 lg:pt-0' : ''} ${
    classes?.container ?? ''
  }`}
  bg={bg}
>
  <Headline title={title} subtitle={subtitle} tagline={tagline} classes={classes?.headline as Record<string, string>} />

  {
    image && (
      <div
        aria-hidden="true"
        class="mb-6 md:mb-8 rounded-[1.5rem] overflow-hidden border border-[var(--aw-border)] bg-black/10"
      >
        {typeof image === 'string' ? (
          <Fragment set:html={image} />
        ) : (
          <Image
            class="w-full h-72 md:h-80 object-cover"
            width={1300}
            height={640}
            widths={[400, 768, 1200]}
            layout="fullWidth"
            {...image}
          />
        )}
      </div>
    )
  }

  <ItemGrid
    items={items}
    columns={columns}
    defaultIcon={defaultIcon}
    classes={{
      container: 'gap-4 md:gap-5',
      panel: 'h-full',
      title: 'text-lg font-semibold',
      description: 'mt-1.5',
      icon: 'text-primary',
      ...((classes?.items as object) ?? {}),
    }}
  />
</WidgetWrapper>
