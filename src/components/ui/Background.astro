---
export interface Props {
  isDark?: boolean;
}

const { isDark = false } = Astro.props;
---

<div class:list={['absolute inset-0', { 'bg-dark/20 dark:bg-transparent': isDark }]}>
  <div class="absolute inset-x-8 top-0 h-px bg-gradient-to-r from-transparent via-[var(--aw-border)] to-transparent">
  </div>
</div>
