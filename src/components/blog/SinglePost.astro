---
import { Icon } from 'astro-icon/components';

import Image from '~/components/common/Image.astro';
import PostTags from '~/components/blog/Tags.astro';
import SocialShare from '~/components/common/SocialShare.astro';

import { getPermalink } from '~/utils/permalinks';
import { getFormattedDate } from '~/utils/utils';

import type { Post } from '~/types';

export interface Props {
  post: Post;
  url: string | URL;
}

const { post, url } = Astro.props;
---

<section class="py-6 md:py-10 mx-auto">
  <article class="max-w-5xl mx-auto px-4 sm:px-6">
    <header
      class="surface-panel border rounded-[1.7rem] p-6 md:p-8 lg:p-10 intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
    >
      <div class="text-sm text-muted mb-3">
        <Icon name="tabler:clock" class="w-4 h-4 inline-block -mt-0.5" />
        <time datetime={String(post.publishDate)} class="inline-block">{getFormattedDate(post.publishDate)}</time>
        {
          post.author && (
            <>
              {' '}
              · <Icon name="tabler:user" class="w-4 h-4 inline-block -mt-0.5" />
              <span class="inline-block">{post.author}</span>
            </>
          )
        }
        {
          post.category && (
            <>
              {' '}
              ·{' '}
              <a class="hover:underline inline-block" href={getPermalink(post.category.slug, 'category')}>
                {post.category.title}
              </a>
            </>
          )
        }
        {
          post.readingTime && (
            <>
              &nbsp;· <span>{post.readingTime}</span> min read
            </>
          )
        }
      </div>

      <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-semibold leading-[1.04] tracking-[-0.025em]">
        {post.title}
      </h1>
      <p class="mt-4 text-lg md:text-2xl text-muted leading-relaxed">
        {post.excerpt}
      </p>

      {
        post.image ? (
          <Image
            src={post.image}
            class="w-full mx-auto mt-6 md:mt-8 rounded-[1.2rem] border border-[var(--aw-border)] bg-gray-400 dark:bg-slate-700"
            widths={[400, 900, 1400]}
            sizes="(max-width: 900px) 100vw, 900px"
            alt={post?.excerpt || ''}
            width={900}
            height={506}
            loading="eager"
            decoding="async"
          />
        ) : null
      }
    </header>

    <div
      class="mx-auto mt-8 px-2 md:px-4 prose prose-md lg:prose-xl max-w-none dark:prose-invert dark:prose-headings:text-slate-200 prose-headings:font-heading prose-headings:leading-tight prose-headings:tracking-tight prose-headings:font-semibold prose-a:text-primary dark:prose-a:text-orange-300 prose-img:rounded-lg prose-img:shadow-none prose-headings:scroll-mt-[100px] prose-li:my-0"
    >
      <slot />
    </div>

    <div class="mx-auto mt-8 px-2 md:px-4 flex justify-between flex-col sm:flex-row gap-4">
      <PostTags tags={post.tags} class="mr-5 rtl:mr-0 rtl:ml-5" />
      <SocialShare url={url} text={post.title} class="align-middle text-muted" />
    </div>
  </article>
</section>
