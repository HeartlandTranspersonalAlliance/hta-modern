---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { CallToAction, Widget } from '~/types';
import Headline from '~/components/ui/Headline.astro';
import Button from '~/components/ui/Button.astro';

interface Props extends Widget {
  title?: string;
  subtitle?: string;
  tagline?: string;
  callToAction?: CallToAction;
  actions?: string | CallToAction[];
}

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  actions = await Astro.slots.render('actions'),

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-6xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <div
    class="rounded-[1.5rem] border border-[var(--aw-border)] bg-gradient-to-r from-orange-100/70 via-white/75 to-cyan-100/70 dark:from-slate-900/80 dark:via-slate-900/65 dark:to-cyan-950/50 p-6 md:p-8 lg:p-10"
  >
    <Headline
      title={title}
      subtitle={subtitle}
      tagline={tagline}
      classes={{
        container: 'max-w-3xl mx-auto mb-0',
        title: 'text-3xl md:text-5xl',
        subtitle: 'text-lg md:text-xl',
      }}
    />
    {
      actions && (
        <div class="max-w-xl m-auto flex flex-col sm:flex-row sm:justify-center gap-3 sm:gap-4 mt-7">
          {Array.isArray(actions) ? (
            actions.map((action) => (
              <div class="flex w-full sm:w-auto">
                <Button {...(action || {})} class="w-full sm:w-auto" />
              </div>
            ))
          ) : (
            <Fragment set:html={actions} />
          )}
        </div>
      )
    }
  </div>
</WidgetWrapper>
