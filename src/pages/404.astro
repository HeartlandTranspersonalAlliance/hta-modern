---
import Layout from '~/layouts/Layout.astro';
import { getHomePermalink } from '~/utils/permalinks';

const title = `Error 404`;
---

<Layout metadata={{ title }}>
  <section class="min-h-[72vh] flex items-center p-6 md:p-10">
    <div class="max-w-3xl w-full mx-auto surface-panel border rounded-[2rem] p-8 md:p-12 text-center">
      <h2 class="font-heading text-7xl md:text-9xl text-primary font-semibold tracking-tight">404</h2>
      <p class="mt-3 text-3xl md:text-4xl font-heading font-semibold">Page Missing</p>
      <p class="mt-4 mb-8 text-lg text-muted leading-relaxed">
        Sorry, we couldn't find this page. You can head back to the homepage.
      </p>
      <a rel="noopener noreferrer" href={getHomePermalink()} class="btn-primary">Back Home</a>
    </div>
  </section>
</Layout>
