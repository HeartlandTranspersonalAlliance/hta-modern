---
import { APP_BLOG } from 'astrowind:config';
import type { Post } from '~/types';

import Image from '~/components/common/Image.astro';

import { findImage } from '~/utils/images';
import { getPermalink } from '~/utils/permalinks';

export interface Props {
  post: Post;
}

const { post } = Astro.props;
const image = await findImage(post.image);

const link = APP_BLOG?.post?.isEnabled ? getPermalink(post.permalink, 'post') : '';
---

<article
  class="h-full surface-card border rounded-2xl overflow-hidden transition hover:-translate-y-1 intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
>
  {
    image &&
      (link ? (
        <a href={link} class="block">
          <Image
            src={image}
            class="w-full h-48 object-cover bg-gray-400 dark:bg-slate-700"
            widths={[400, 900]}
            width={400}
            sizes="(max-width: 900px) 400px, 900px"
            alt={post.title}
            aspectRatio="16:9"
            layout="cover"
            loading="lazy"
            decoding="async"
          />
        </a>
      ) : (
        <Image
          src={image}
          class="w-full h-48 object-cover bg-gray-400 dark:bg-slate-700"
          widths={[400, 900]}
          width={400}
          sizes="(max-width: 900px) 400px, 900px"
          alt={post.title}
          aspectRatio="16:9"
          layout="cover"
          loading="lazy"
          decoding="async"
        />
      ))
  }

  <div class="p-5 md:p-6">
    <h3 class="text-xl font-semibold leading-tight mb-2 font-heading">
      {
        link ? (
          <a class="inline-block hover:text-primary transition ease-in duration-200" href={link}>
            {post.title}
          </a>
        ) : (
          post.title
        )
      }
    </h3>

    <p class="text-muted text-base leading-relaxed">{post.excerpt}</p>
  </div>
</article>
