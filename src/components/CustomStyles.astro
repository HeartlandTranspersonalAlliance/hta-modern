---
import '@fontsource-variable/inter';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Avenir Next', 'Segoe UI Variable', 'Trebuchet MS', sans-serif;
    --aw-font-serif: 'Iowan Old Style', 'Palatino Linotype', 'Book Antiqua', serif;
    --aw-font-heading: 'Optima', 'Avenir Next', 'Trebuchet MS', sans-serif;

    --aw-color-primary: rgb(220 98 41);
    --aw-color-secondary: rgb(22 99 108);
    --aw-color-accent: rgb(168 53 42);

    --aw-color-text-heading: rgb(26 30 43);
    --aw-color-text-default: rgb(43 49 67);
    --aw-color-text-muted: rgb(74 82 107 / 86%);
    --aw-color-bg-page: rgb(243 241 233);
    --aw-color-bg-page-dark: rgb(15 23 35);

    --aw-surface: rgb(255 255 255 / 78%);
    --aw-surface-strong: rgb(255 255 255 / 92%);
    --aw-border: rgb(170 157 137 / 34%);

    ::selection {
      background-color: rgb(246 199 153);
      color: rgb(33 21 14);
    }
  }

  .dark {
    --aw-font-sans: 'Avenir Next', 'Segoe UI Variable', 'Trebuchet MS', sans-serif;
    --aw-font-serif: 'Iowan Old Style', 'Palatino Linotype', 'Book Antiqua', serif;
    --aw-font-heading: 'Optima', 'Avenir Next', 'Trebuchet MS', sans-serif;

    --aw-color-primary: rgb(255 136 73);
    --aw-color-secondary: rgb(86 200 188);
    --aw-color-accent: rgb(243 105 79);

    --aw-color-text-heading: rgb(240 246 255);
    --aw-color-text-default: rgb(223 233 246);
    --aw-color-text-muted: rgb(156 175 199 / 90%);
    --aw-color-bg-page: rgb(15 23 35);

    --aw-surface: rgb(14 31 45 / 74%);
    --aw-surface-strong: rgb(16 37 52 / 88%);
    --aw-border: rgb(116 180 188 / 28%);

    ::selection {
      background-color: rgb(220 98 41);
      color: rgb(248 247 245);
    }
  }
</style>
